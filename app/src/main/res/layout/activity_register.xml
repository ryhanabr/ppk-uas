<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="16dp"
    android:paddingHorizontal="45dp"
    android:id="@+id/parent_login"
    android:background="@drawable/background"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:text="Daftar Akun"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed-medium" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/nama"
        android:elevation="1dp"
        android:inputType="textPersonName"
        android:layout_marginTop="45dp"
        android:paddingHorizontal="20dp"
        android:drawableRight="@drawable/ic_baseline_person_24"
        android:background="@color/white"
        android:hint="Nama Lengkap"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/username"
        android:elevation="1dp"
        android:inputType="textPersonName"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="20dp"
        android:drawableRight="@drawable/ic_baseline_person_24"
        android:background="@color/white"
        android:hint="Buat Username"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/email"
        android:elevation="1dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="20dp"
        android:drawableRight="@drawable/ic_baseline_email_24"
        android:background="@color/white"
        android:hint="Email Aktif"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/alamat"
        android:elevation="1dp"
        android:inputType="text"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="20dp"
        android:drawableRight="@drawable/ic_baseline_location_on_24"
        android:background="@color/white"
        android:hint="Alamat Domisili"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/telp"
        android:elevation="1dp"
        android:inputType="textPhonetic"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="20dp"
        android:drawableRight="@drawable/ic_baseline_contact_phone_24"
        android:background="@color/white"
        android:hint="Nomor Telepon"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/password"
        android:elevation="1dp"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="20dp"
        android:drawableRight="@drawable/ic_baseline_lock_24"
        android:background="@color/white"
        android:hint="Buat Password"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/konfirmasi"
        android:elevation="1dp"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="20dp"
        android:drawableRight="@drawable/ic_baseline_lock_24"
        android:background="@color/white"
        android:hint="Konfirmasi Password"
        />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:id="@+id/cb_aturan"
        android:text="Data sudah terisi dengan benar"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="#808080BF"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register"
        android:layout_marginTop="25dp"
        android:layout_gravity="end"
        android:textAllCaps="false"
        android:background="@color/dark_blue"
        android:text="Simpan Akun"
        android:textStyle="bold"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_register"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah punya akun? "
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_login"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Masuk di sini!"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

    </LinearLayout>

</LinearLayout>